<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="pane" prefHeight="175.0" prefWidth="600.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demoreal.ControladorAbonos">
   <children>
      <Label layoutX="336.0" layoutY="22.0" text="Seleccione un asiento disponible" textFill="#ebe7e7">
         <font>
            <Font name="System Bold Italic" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="txtAsiento" disable="true" layoutX="84.0" layoutY="68.0" prefHeight="25.0" prefWidth="137.0" />
      <ComboBox fx:id="comboAsiento" layoutX="367.0" layoutY="68.0" onAction="#onSelectAsiento" onShowing="#showAsientos" prefWidth="150.0" />
      <Label layoutX="120.0" layoutY="22.0" text="Asiento" textFill="#ebe7e7">
         <font>
            <Font name="System Bold Italic" size="14.0" />
         </font>
      </Label>
      <Button fx:id="aceptarAsiento" layoutX="272.0" layoutY="120.0" mnemonicParsing="false" onAction="#onClickAceptar" text="Aceptar" />
   </children>
</AnchorPane>
